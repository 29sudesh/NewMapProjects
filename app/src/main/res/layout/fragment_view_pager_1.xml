<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="viewmodel"
                type="net.bdtech.estate.ui.properties.viewmodels.ViewPagerViewModel"/>

        <variable
                name="handlers"
                type="net.bdtech.estate.ui.properties.handlers.ViewPagerHandler"/>

    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_margin="12dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="free input"
                    android:layout_marginBottom="12dp"/>
            <EditText
                    android:id="@+id/et_view_pager_1_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={viewmodel.inputText}"/>
        </LinearLayout>

        <Button
                android:text="Next"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:onClick="@{() -> handlers.onClickToNext(viewmodel)}"/>
    </RelativeLayout>

</layout>